.PHONY: all loader_dir libudis86_dir libmspack_dir tests_dir clean distclean test

all: libudis86_dir libmspack_dir loader_dir tests_dir tools_dir

loader_dir:
	cd loader && make

tests_dir:
	cd tests && make

tools_dir:
	cd tools && make

libudis86_dir:
	cd libudis86 && make

libmspack_dir:
	cd libmspack && make

clean:
	cd libudis86 && make clean
	cd libmspack && make clean
	cd loader && make clean
	cd tests && make clean
	cd tools && make clean

distclean: clean
	rm -rf drive
	rm -rf config.status config.log autom4te.cache

TESTLIST = \
	completion \
	device \
	event \
	file \
	font \
	gdi \
	heap \
	job \
	mailslot \
	mutant \
	object \
	port \
	process \
	reg \
	section \
	seh \
	sema \
	syscall \
	thread \
	timer \
	token \
	user \
	virtual \
	wine-port

test: all
	@echo "Thread tracing tests"
	for tc in $(TESTLIST) ; do echo $$tc ; ./runtest -q $$tc || exit 1 ; done

