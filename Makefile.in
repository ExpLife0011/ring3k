.PHONY: all loader_dir tests_dir cdrom clean distclean

all: libudis86_dir loader_dir tests_dir tools_dir

test: all
	cd loader && make test

loader_dir:
	cd loader && make

tests_dir:
	cd tests && make

tools_dir:
	cd tools && make

libudis86_dir:
	cd libudis86 && make

clean:
	cd libudis86 && make clean
	cd loader && make clean
	cd tests && make clean
	cd tools && make clean

distclean: clean
	rm -rf config.status config.log autom4te.cache

